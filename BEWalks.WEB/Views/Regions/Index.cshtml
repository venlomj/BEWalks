@model IEnumerable<BEWalks.WEB.Models.DTO.RegionDto>

@{
}

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="bg-primary text-white">Id</th>
                <th scope="col" class="bg-primary text-white">Code</th>
                <th scope="col" class="bg-primary text-white">Name</th>
                <th scope="col" class="bg-primary text-white"> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var walk in Model)
            {
                <tr>
                    <td class="bg-light">@walk.Id</td>
                    <td class="bg-light">@walk.Code</td>
                    <td class="bg-light">@walk.Name</td>
                    <td class="bg-light">
                        <a asp-controller="Regions" asp-action="Edit" asp-route-id="@walk.Id" class="btn btn-light">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>